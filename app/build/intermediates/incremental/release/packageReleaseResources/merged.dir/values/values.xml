<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="color" name="appWindowBackground"/>
    <attr format="color" name="buttonFill"/>
    <attr format="color" name="buttonTextColor"/>
    <attr format="color" name="cardBackground"/>
    <attr format="color" name="iconColor"/>
